<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.jtxdriggers.android.ventriloid"
      android:versionName="3.0.0" android:versionCode="300">
    <uses-sdk android:minSdkVersion="7" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
	    <service
			android:name=".VentriloidService"
			android:process=":ventriloid_service" 
			android:icon="@drawable/icon"
			android:label="@string/service_name" />
			
        <activity android:name=".Main"
        	android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Manage"
        	android:label="@string/manage" />
        <activity android:name=".Edit"
        	android:label="@string/edit" />
        <activity android:name=".Add"
        	android:label="@string/add2" />

    </application>
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
</manifest>