<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="@string/app_name"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="18sp"
	    android:textStyle="bold" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Copyright 2013"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="14sp" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Justin Driggers (jtxdriggers)"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="14sp" />
	
	<TextView
	    android:id="@+id/ventriloidSource"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="Ventriloid is licensed under the GNU General Public License version 3. Source available at http://ventriloid.googlecode.com/"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="14sp"
	    android:gravity="center" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="Please consider donating to the libraries that made Ventriloid possible:"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="14sp"
	    android:gravity="center" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="Mangler / libventrilo3"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="16sp"
	    android:textStyle="bold"
	    android:gravity="center" />
	
	<TextView
	    android:id="@+id/manglerSource"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:text="http://www.mangler.org/"
	    android:textSize="14sp"
	    android:gravity="center" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="ActionBarSherlock"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="16sp"
	    android:textStyle="bold"
	    android:gravity="center" />
	
	<TextView
	    android:id="@+id/absSource"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:text="http://www.actionbarsherlock.com/"
	    android:textSize="14sp"
	    android:gravity="center" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="HoloEverywhere"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="16sp"
	    android:textStyle="bold"
	    android:gravity="center" />
	
	<TextView
	    android:id="@+id/holoSource"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:text="http://www.github.com/ChristopheVersieux/HoloEverywhere"
	    android:textSize="14sp"
	    android:gravity="center" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="SlidingMenu"
	    android:textColor="@color/primary_text_holo_light"
	    android:textSize="16sp"
	    android:textStyle="bold"
	    android:gravity="center" />
	
	<TextView
	    android:id="@+id/smSource"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingBottom="10dp"
	    android:text="http://www.github.com/jfeinstein10/SlidingMenu"
	    android:textSize="14sp"
	    android:gravity="center" />
    
</LinearLayout>