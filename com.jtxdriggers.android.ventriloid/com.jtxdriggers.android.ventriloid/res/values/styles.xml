<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="ConnectedTheme" parent="AppBaseTheme">
        <item name="android:listSeparatorTextViewStyle">@style/Holo.TextView.ListSeparator</item>
    </style>

    <style name="AppBaseTheme" parent="Holo.Theme.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

	<style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.ActionBar">
	    <item name="background">@drawable/blue_gradient_bg</item>
	    <item name="android:background">@drawable/blue_gradient_bg</item>
	    <item name="titleTextStyle">@style/Widget.Styled.ActionBar.Title</item>
	    <item name="android:titleTextStyle">@style/Widget.Styled.ActionBar.Title</item>
	    <item name="subtitleTextStyle">@style/Widget.Styled.ActionBar.Subtitle</item>
	    <item name="android:subtitleTextStyle">@style/Widget.Styled.ActionBar.Subtitle</item>
	</style>
	
	<style name="Widget.Styled.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="Widget.Styled.ActionBar.Subtitle" parent="TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">@android:color/black</item>
	</style>

</resources>